extends ../layouts/common.pug

block content
  h1 Create user

  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/api/v2/user/create", method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input#name.form-control(name="name", type="text", value=values ? values.name : "")

    .form-group
      label(for="user") user
      input#user.form-control(name="user", type="text", value=values ? values.user : "")

    .form-group
      label(for="avatar") Avatar
      input#avatar.form-control-file(name="avatar", type="file")

    button.btn.btn-primary Create
