extends ../layouts/common.pug

block content
  h1 Login

  if errors
    each error in errors
      .alert.alert-danger= error

  form(method="POST", action ="/api/v2/auth/login")
    .form-group
      label(for="user") user
      input#user.form-control(name="user", type="text", value=values ? values.user : "")

    .form-group
      label(for="pass") Phone
      input#pass.form-control(name="pass", type="password", value=values ? values.pass : "")

    button.btn.btn-primary Login